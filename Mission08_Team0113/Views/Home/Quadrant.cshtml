@model List<Mission08_Team0113.Models.Table>


<div class="box">
    <h1 style="text-align: center;">Stephen Covey's Time Management Matrix</h1>

    <div class="row">
        <div class="col border"></div>
        <div class="col border">Urgent</div>
        <div class="col border">Non-Urgent</div>
    </div>
    <div class="row">
        <div class="col border">Important</div>

        <div class="col border">
            Quadrant 1
            @foreach (var item in ViewBag.Quadrant1)
            {
                <div>@item.Task</div>
                <div>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                </div>
            }
        </div>
        <div class="col border">
            Quadrant 2
            @foreach (var item in ViewBag.Quadrant2)
            {
                <div>@item.Task</div>
                <div>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col border">Not-Important</div>

        <div class="col border">
            Quadrant 3
            @foreach (var item in ViewBag.Quadrant3)
            {
                <div>@item.Task</div>
                <div>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                </div>
            }
        </div>
        <div class="col border">
            Quadrant 4
            @foreach (var item in ViewBag.Quadrant4)
            {
                <div>@item.Task</div>
                <div>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                </div>
            }
        </div>
    </div>
</div>





